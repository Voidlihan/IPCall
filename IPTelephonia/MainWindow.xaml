<Window x:Class="IPTelephonia.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IPTelephonia"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="114*"/>
            <RowDefinition Height="83*"/>
            <RowDefinition Height="56*"/>
            <RowDefinition Height="76*"/>
            <RowDefinition Height="105*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="87*"/>
            <ColumnDefinition Width="627*"/>
            <ColumnDefinition Width="86*"/>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="1" Margin="0,114,0,0" Grid.RowSpan="4">
            <TextBox x:Name="textBoxIP" Text="IP" TextWrapping="Wrap" Width="335" Height="39" FontSize="20"/>
            <TextBox x:Name="textBoxPort" Text="Port" TextWrapping="Wrap" Width="335" Height="39" FontSize="20"/>
            <Button Content="Call" Width="335" Height="55" Margin="0 70 0 0" FontSize="25" Click="Call" Background="#FF1E8514" Foreground="White" FontWeight="Bold"/>
        </StackPanel>

    </Grid>
</Window>
